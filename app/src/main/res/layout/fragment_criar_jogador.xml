<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_margin="40dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/holo_orange_dark"
    tools:context=".CriarJogadorFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="criar novo jogador"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nome_jogador_novo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nome">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome_novo_jogador_edit_text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nome_clube_novo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="clube">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clube_novo_jogador_edit_text"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/criar_botao_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="criar"
        android:textColor="#ffff"
        android:backgroundTint="@color/colorAccent"/>



</LinearLayout>